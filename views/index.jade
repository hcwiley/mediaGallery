extends layout

block content
  style
    .hand{
      width: 20px;
      height: 20px;
      position: fixed;
      left: 0px;
      top: 300px;
      -o-background-size: 100% 100%;
      -webkit-background-size: 100% 100%;
      z-index: 10;
    }
    #leftCursor{
      /*background-color: #00f;*/
      background-image: url('/img/hand-left.svg');
    }
    #rightCursor{
      /*background-color: #f00;*/
      background-image: url('/img/hand-right.svg');
    }
    #gallery{
      position: relative;
      opacity: .4;
    }
    .obj{
      position: absolute;
      top: 150px;
      left: 200px;
      width: 200px;
      height: 300px;
      z-index: 1;
      opacity: 0;
      border: 1px solid #000;
      margin: 20px 40px;
    }
    .obj img{
      width: 100%;
      height: auto;
    }
    .pushed{
      background-color: #0c0;
    }
    .over{
      z-index: 2;
      opacity: 1;
    }
    .obj.not-grabbed {
      width: 50px;
      height: 50px;
      z-index: 0;
      opacity: .5;
    }
    .obj.grabbed {
      opacity: 1;
      z-index: 10;
    }
    .tut {
      diplsay: none;
      z-index: 20;
    }
  .row
    .span3
      h1= title
      h4 Current user status: <span id='status'>---</span>
    .span4
      #tut
        video(id='tut-video', width='400', height='300')
          source(src='/videos/tut.m4v')
        #ended.hide
          h3 Now grab this box to start!

  #play
    #leftCursor.hand
    #rightCursor.hand

  .row
    #gallery
      for obj in objects
        .grabbable.obj.span3.offset1(data-title="#{obj.title}", data-desc="#{obj.description}", data-loc="#{obj.location}", data-link="#{obj.link}")
          img(src='#{obj.image}')
          h5=obj.title

  include signInModal 
