extends layout

block content
  //-#status-box.span5
    //-h3 Current user status: <span id='status'>---</span>

  #play
    #leftCursor.hand
    #rightCursor.hand

  #tut.grabbable
    video(id='tut-video', width='400', height='300')
      source(src='/videos/tut-1.m4v')
  #ended.hide
    h3.text Now grab this box to start!
  #show.corner.bottom.left(data-gallery='EVENT')
    .icon
  #event.corner.top.left(data-gallery='ART')
    .icon
  #food.corner.bottom.right(data-gallery='FOOD')
    .icon
  #drink.corner.top.right(data-gallery='DRINK')
    .icon
  #email-drop.drop
    h3 email me this
    .icon
  #return-drop.drop
    h3 go back
    .icon
  #info
    .left
      h2.title
        Some title...
      p.desc
        Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Morbi commodo, ipsum sed pharetra gravida, orci magna rhoncus neque, id pulvinar odio lorem non turpis. Nullam sit amet enim.
      .date-time
        h5.date Date:
        p.date
        h5.time Start time:
        p.time
    img.map
      
  #gallery
    h2 Select a category to get started

  include signInModal

  script(type="text/template",id="gallery-template")
    <div class='grabbable obj' style="<%= pos %>">
    <img src="<%= image %>"/>
    <h5><%= title %></h5>
    </div>
